<!DOCTYPE html>
<html>
<head>
	<title>Cidades</title>
	<link rel="stylesheet" type="text/css" href="estilos.css">
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@200&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
</head>
<body>	
	<h1 class="title">Cadastro de cidades</h1>	
	<form method="post" enctype="multipart/form-data">
		<input placeholder="Nome da Cidade" id="nomeCidade" class="input" type="text" name="nomeCidade">
		<input placeholder="Estado" id="estado" class="input" type="text" name="estado">
		<input placeholder="Descrição" id="descricao" class="input" type="text" name="descricao">
		<input id="imagem" class="input" type="file" name="file" >
		<div class="wrapper">
			<button id="btn-cadastrar" class="button-resize btn-pattern" type="submit">Cadastrar</button>
		</div>
		
	</form>

	<script type="text/javascript">
		document.querySelector("#btn-cadastrar").addEventListener("click",validaCadastro);		
		function validaCadastro(){			
			let nomeCidade = document.querySelector("#nomeCidade").value;
			let estado = document.querySelector("#estado").value;
			let descricao = document.querySelector("#descricao").value;
			let imagem = document.querySelector("#imagem").value;	

			if (nomeCidade == "" || estado == "" || descricao == "" || imagem == ""){
				alert('Erro! Preencha todos os campos');
				return false;
			}			
		}

		if({{itemCidade}} === 1){
				alert('Cadastro realizado com sucesso!');
			}
	</script>
</body>
</html>
